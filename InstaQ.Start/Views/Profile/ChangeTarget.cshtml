@using InstaQ.Domain.Users.Enums
@model InstaQ.WEB.ViewModels.Settings.ChangeTargetViewModel

<form id="changeTarget" asp-controller="Settings" asp-action="ChangeTarget" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Target"></label>
            <input asp-for="Target" class="form-control"/>
            <span asp-validation-for="Target" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Type" id="flexRadioDefault1" value="@ParticipantsType.Followers">
                <label class="form-check-label" for="flexRadioDefault1">
                    Подписчики
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Type" id="flexRadioDefault2" value="@ParticipantsType.Followings">
                <label class="form-check-label" for="flexRadioDefault2">
                    Подписки
                </label>
            </div>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Сменить цель">
        </div>
    </div>
</form>